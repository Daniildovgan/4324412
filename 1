#include <iostream>

int main() {
    int array[3][4] = {
        {1, 0, 3, 4},
        {0, 5, 6, 0},
        {7, 0, 0, 10}
    };

    int zeroCount = 0;

    for(int i = 0; i < 3; ++i) {
        for(int j = 0; j < 4; ++j) {
            if(array[i][j] == 0) {
                ++zeroCount;
            }
        }
    }

    std::cout << "Кількість нульових елементів: " << zeroCount << std::endl;

    return 0;
}
