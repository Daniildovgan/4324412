#include <iostream>
#include <cstdlib> 
#include <ctime>   

int main() {
    const int rows = 3;
    const int cols = 4;
    int array[rows][cols];

    std::srand(std::time(0));

    for(int i = 0; i < rows; ++i) {
        for(int j = 0; j < cols; ++j) {
            array[i][j] = std::rand() % 11 - 5;
        }
    }

    std::cout << "Масив:\n";
    for(int i = 0; i < rows; ++i) {
        for(int j = 0; j < cols; ++j) {
            std::cout << array[i][j] << " ";
        }
        std::cout << std::endl;
    }

    int zeroCount = 0;
    for(int i = 0; i < rows; ++i) {
        for(int j = 0; j < cols; ++j) {
            if(array[i][j] == 0) {
                ++zeroCount;
            }
        }
    }

    std::cout << "Кількість нульових елементів: " << zeroCount << std::endl;

    return 0;
}
