#include <iostream>
#include <cstdlib>
#include <ctime>

int main() {
    const int n = 5;
    int matrix[n][n];

    std::srand(std::time(0));

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            matrix[i][j] = std::rand() % 201 - 100;
        }
    }

    std::cout << "Матриця:\n";
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cout << matrix[i][j] << " ";
        }
        std::cout << std::endl;
    }

    int maxVal = matrix[0][0];

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j <= i; ++j) {
            if (matrix[i][j] > maxVal) {
                maxVal = matrix[i][j];
            }
        }
    }

    std::cout << "Найбільше значення у темно-синіх частинах: " << maxVal << std::endl;

    return 0;
}
